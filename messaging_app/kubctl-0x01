#!/bin/bash

set -e

echo "ğŸ“¦ Scaling deployment 'messaging-app' to 3 replicas..."
kubectl scale deployment messaging-app --replicas=3

echo "ğŸ” Verifying running pods..."
kubectl get pods -l app=messaging

echo "â³ Waiting for all pods to be ready..."
kubectl wait --for=condition=ready pod -l app=messaging --timeout=120s

# Use a custom port to avoid conflicts
LOCAL_PORT=8081
TARGET_PORT=8000

echo "ğŸš€ Starting port-forward on localhost:$LOCAL_PORT..."
kubectl port-forward service/messaging-service $LOCAL_PORT:$TARGET_PORT > /dev/null 2>&1 &
PORT_FORWARD_PID=$!

# Wait a few seconds for the forward to establish
sleep 5

# Check if the port is open
if lsof -i tcp:$LOCAL_PORT >/dev/null 2>&1; then
  echo "ğŸ”¥ Running wrk load test on http://localhost:$LOCAL_PORT/ ..."
  wrk -t4 -c50 -d10s http://localhost:$LOCAL_PORT/
else
  echo "âŒ Port-forwarding failed. Skipping wrk load test."
fi

# Kill port-forward if it exists
if ps -p $PORT_FORWARD_PID > /dev/null; then
  kill $PORT_FORWARD_PID
fi

echo "ğŸ“Š Resource usage:"
kubectl top pods || echo "âš ï¸ 'kubectl top' failed. Is metrics-server enabled?"
